  <body>
    <div class="mainCard">
      <div class="brand">
        <h1>🐶</h1>
        <h1>Name my pet</h1>
      </div>
      <div class="sb-form">
        <form action="/" method="post">
          <input
            type="text"
            class="form-control inp"
            placeholder="Enter animal name"
            autofocus
            autocomplete="off"
            aria-describedby="inputGroup-sizing-lg"
            name="animal"
          />
          <br /><select class="form-select" aria-label="Default select example" name="category">
            <option selected disabled value="emperor">Choose name category</option>
            <option value="superhero">Superhero</option>
            <option value="wrestler">Wrestler</option>
            <option value="singer">Singer</option>
          </select>
          <button class="but btn-success btn" type="submit">
            Suggest names
          </button>
        </form>
      </div>
